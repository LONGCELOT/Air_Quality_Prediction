<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#1976D2" />
        </shape>
    </item>
    
    <!-- AQI Icon representation -->
    <item android:top="12dp" android:left="12dp" android:right="12dp" android:bottom="12dp">
        <shape android:shape="oval">
            <solid android:color="#4CAF50" />
        </shape>
    </item>
    
    <!-- Text representation -->
    <item android:top="24dp" android:left="24dp" android:right="24dp" android:bottom="24dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
</layer-list>
